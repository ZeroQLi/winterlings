---
import '../styles/main.css'
import Card from '../components/card.svelte'
import "@fontsource/space-grotesk"
import "@fontsource/satisfy"


const projects = await Astro.glob("../**/*.md");
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    	<!-- <link rel="stylesheet" href="https://css.hackclub.com/fonts.css" /> -->
		<title>Astro</title>
	</head>
	<body>
	<a href="https://hackclub.com/">
    <img style="position: absolute; top: 0; right: 15px; border: 0; width: 150px; z-index: 999;"src="https://assets.hackclub.com/flag-orpheus-top.svg"alt="Hack Club"/></a>
		
		
	<div class=" bg-sky-400 p-10">
        <h1 class=" font-['Satisfy'] flex text-9xl justify-center pb-9">Winterlings</h1>
        <h3 class=" flex font-bold text-4xl justify-center pb-3">
            What hardware hackyness are hack clubbers up to this winter?
        </h3>
		<h2 class=" text-2xl flex justify-center">wdym harware hackyness?</h2>
    </div>
    
    <div class=" bg-[#252429] p-9 grid grid-cols-3 gap-9">
		{projects.map((post) => 
		<Card Name={post.frontmatter.project} Author={post.frontmatter.name} Summary={post.frontmatter.summary} Link={post.file.slice(42).slice(0,-3)}/>
		)}
    </div>
		
	</body>
</html>
